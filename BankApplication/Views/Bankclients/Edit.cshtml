@model BankApplication.Bankclient

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Bankclient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ClientFullName" class="control-label"></label>
                <input asp-for="ClientFullName" class="form-control" />
                <span asp-validation-for="ClientFullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CountryIdKey" class="control-label"></label>
                <select asp-for="CountryIdKey" class="form-control" asp-items="ViewBag.CountryIdKey"></select>
                <span asp-validation-for="CountryIdKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CityIdKey" class="control-label"></label>
                <select asp-for="CityIdKey" class="form-control" asp-items="ViewBag.CityIdKey"></select>
                <span asp-validation-for="CityIdKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UniqueIdentityNumber" class="control-label"></label>
                <input asp-for="UniqueIdentityNumber" class="form-control" />
                <span asp-validation-for="UniqueIdentityNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientBirthday" class="control-label"></label>
                <input asp-for="ClientBirthday" class="form-control" />
                <span asp-validation-for="ClientBirthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a>AccountNumber:@ViewBag.ClientAcc.AccountNumber</a>
            </div>

            <div class="form-group">
                <a>AccountBalance:@ViewBag.ClientAcc.Balance</a>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
